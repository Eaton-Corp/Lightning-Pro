<Window x:Class="LightningPRO.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightningPRO"
        mc:Ignorable="d"
        Title="Enter Subcategory Name" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Please enter the new subcategory name:"/>
        <TextBox x:Name="InputTextBox" Margin="0,10,0,10"/>
        <Button Content="OK" HorizontalAlignment="Right" Click="OkButton_Click"/>
    </StackPanel>
</Window>
